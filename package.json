{
  "name": "mildlyboring",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.code.txt AND LICENSE.content.txt",
  "type": "module",
  "packageManager": "yarn@4.2.1",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build && next-sitemap --config next-sitemap.config.cjs",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,mdx}\"",
    "typecheck": "tsc --noEmit",
    "generate:og": "node ./.bin/make_og_images.mjs",
    "generate:blur": "node ./.bin/compute_blurhash.mjs",
    "generate:post": "node ./.bin/generate_post.mjs"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/node-loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.2.3",
    "@tailwindcss/typography": "0.5.13",
    "@types/ramda": "^0.30.0",
    "clsx": "2.1.1",
    "dayjs": "^1.11.11",
    "disqus-react": "^1.1.5",
    "fast-glob": "^3.3.2",
    "next": "14.2.3",
    "next-sitemap": "4.2.3",
    "prismjs": "^1.29.0",
    "ramda": "^0.30.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-redux": "^9.1.2",
    "react-to-text": "^2.0.1",
    "rehype-mathjax": "^6.0.0",
    "rehype-prism-plus": "^2.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "schema-dts": "1.1.2",
    "sharp": "^0.33.4",
    "unified": "^11.0.4",
    "wasm-vips": "0.0.9",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@next/env": "^14.2.3",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-react": "^7.34.2",
    "image-size": "^1.1.1",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.6.2",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "types-ramda": "^0.30.0",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "sharp": "$sharp"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
