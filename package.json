{
  "name": "mildlyboring",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.code.txt AND LICENSE.content.txt",
  "type": "module",
  "packageManager": "yarn@4.5.3",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build && next-sitemap --config next-sitemap.config.cjs",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,mdx}\"",
    "typecheck": "tsc --noEmit",
    "generate:og": "node ./.bin/make_og_images.mjs",
    "generate:blur": "node ./.bin/compute_blurhash.mjs",
    "generate:post": "node ./.bin/generate_post.mjs"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/node-loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "15.0.3",
    "@tailwindcss/typography": "0.5.15",
    "@types/ramda": "^0.30.2",
    "clsx": "2.1.1",
    "dayjs": "^1.11.13",
    "disqus-react": "^1.1.5",
    "fast-glob": "^3.3.2",
    "next": "15.0.3",
    "next-sitemap": "4.2.3",
    "prismjs": "^1.29.0",
    "ramda": "^0.30.1",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "react-redux": "^9.1.2",
    "react-to-text": "^2.0.1",
    "rehype-mathjax": "^6.0.0",
    "rehype-prism-plus": "^2.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "schema-dts": "1.1.2",
    "sharp": "^0.33.5",
    "unified": "^11.0.5",
    "wasm-vips": "0.0.11",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@next/env": "15.0.3",
    "@types/node": "^22.9.4",
    "@types/react": "^19.0.0-rc.1",
    "@types/react-dom": "19.0.0-rc.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-config-next": "15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.0",
    "eslint-plugin-react": "^7.37.2",
    "image-size": "^1.1.1",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.15",
    "ts-node": "^10.9.2",
    "types-ramda": "^0.30.1",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "sharp": "$sharp"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "resolutions": {
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1"
