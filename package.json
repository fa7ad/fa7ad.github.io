{
  "name": "mildlyboring",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.code.txt AND LICENSE.content.txt",
  "type": "module",
  "packageManager": "yarn@4.1.0",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build && next-sitemap --config next-sitemap.config.cjs",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,md}\"",
    "typecheck": "tsc --noEmit",
    "generate:og": "node ./.bin/make_og_image.mjs",
    "generate:blur": "node ./.bin/compute_blurhash.mjs"
  },
  "dependencies": {
    "@reduxjs/toolkit": "2.1.0",
    "@tailwindcss/typography": "0.5.10",
    "@types/ramda": "^0.29.10",
    "clsx": "2.1.0",
    "dayjs": "^1.11.10",
    "disqus-react": "^1.1.5",
    "glob": "^10.3.10",
    "hast-util-sanitize": "^5.0.1",
    "html-react-parser": "5.1.2",
    "image-size": "^1.1.1",
    "next": "14.1.0",
    "next-sitemap": "4.2.3",
    "prismjs": "^1.29.0",
    "ramda": "^0.29.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^9.1.0",
    "rehype-mathjax": "^6.0.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "remark-stringify": "^11.0.0",
    "schema-dts": "1.1.2",
    "sharp": "^0.33.2",
    "strip-markdown": "^6.0.0",
    "unified": "^11.0.4",
    "wasm-vips": "0.0.7",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@next/env": "^14.1.0",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "encoding": "0.1.13",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "sharp": "$sharp"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
